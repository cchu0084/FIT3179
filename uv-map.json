{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 530,
  "height": 500,
  "title": "Average annual solar ultraviolet (UV) Index in Australia by state",
  "projection": {"type": "mercator", "center": [134, -28], "scale": 700},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cchu0084/FIT3179/refs/heads/main/ausmapwgrati.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "mark": {"type": "geoshape", "stroke": "lightgrey", "strokeWidth": 0.5}
    },
    {
      "data": {"graticule": {"step": [5, 5]}},
      "mark": {"type": "geoshape", "stroke": "lightgrey", "strokeWidth": 0.5}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/cchu0084/FIT3179/refs/heads/main/ausmapwgrati.json",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_admin_1_states_provinces"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/cchu0084/FIT3179/refs/heads/main/Australia_UV_Index_By_State1.csv",
              "format": {"type": "csv"}
            },
            "key": "State/Territory",
            "fields": ["Average UV Index"]
          }
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "field": "Average UV Index",
          "type": "quantitative",
          "scale": {"scheme": "oranges", "domain": [1, 14]},
          "title": "UV Index"
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "State:"},
          {
            "field": "Average UV Index",
            "type": "quantitative",
            "title": "Average UV Index:"
          }
        ]
      }
    },
    {
      "data": {"values": [{"note": "Data source: Bureau of Meteorology"}]},
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "fontSize": 13,
        "color": "black"
      },
      "encoding": {
        "text": {"field": "note"},
        "x": {"value": 40},
        "y": {"value": 480}
      }
    }
  ],
  "config": {
    "axis": {"domain": false, "grid": false},
    "view": {"stroke": "transparent"}
  }
}